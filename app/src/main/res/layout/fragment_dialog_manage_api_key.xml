<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".dialogs.DialogManageApiKeyFragment">

    <TextView
        android:id="@+id/tvCurrentApiKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@id/etNewApiKey"
        app:layout_constraintEnd_toStartOf="@id/ibDeleteApiKey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibDeleteApiKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@id/tvCurrentApiKey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCurrentApiKey"
        app:layout_constraintTop_toTopOf="@id/tvCurrentApiKey" />

    <EditText
        android:id="@+id/etNewApiKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:hint="@string/enter_your_operweathermap_org_api_key_here"
        app:layout_constraintBottom_toTopOf="@id/btnVisitWebPage"
        app:layout_constraintEnd_toStartOf="@id/ibStoreNewApiKey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentApiKey" />

    <ImageButton
        android:id="@+id/ibStoreNewApiKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackgroundBorderless"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/etNewApiKey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/etNewApiKey"
        app:layout_constraintTop_toTopOf="@id/etNewApiKey" />

    <Button
        android:id="@+id/btnVisitWebPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_api_key"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNewApiKey" />

</androidx.constraintlayout.widget.ConstraintLayout>